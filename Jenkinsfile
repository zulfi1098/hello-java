pipeline {
             agent any
             stages {
                         stage ("gradle build") {
                                     Steps {
                                                 echo "building the application.."
                                     }
                         }
             stage ("gradle test") {
                                     Steps {
                                                 echo "testing the application.."
                                     }
                         }
             stage ("gradle deploy") {
                                     Steps {
                                                 echo "deploying the application.."
                                     }
                         }
             }
 } 